@model List<Escuela.Dominio.Erollement>
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<table id="mitabla" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                LastName
            </th>
            <th>
                FirstMidName
            </th>
            <th>
                Curso perteneciente
            </th>
            <th>
                Grade
            </th>
        </tr>

    </thead>

    <tbody>

        @foreach (var iteracion in Model)
        {
            <tr>
                <td>@iteracion.Student.LastName</td>
                <td>@iteracion.Student.FirstMidName</td>
                <td>@iteracion.Course.Title</td>
                <td>@iteracion.Grade</td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Menu Principal", "Index", "EscuelaController1", new { }, new { @class = "btn btn-success" })
@Html.ActionLink("Registrar alumno en un curso", "Vista", "Erollement", new { }, new { @class = "btn btn-success" })

@section scripts{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            var tabla = $('#mitabla').DataTable()
        });
    </script>
}